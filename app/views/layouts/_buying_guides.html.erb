<%
Category.all.in_groups(2, false) do |cats|
col = col == 'left' ? 'right' : 'left'
%>
<div class="buying-guides-<%= col %>-column">
  <% cats.each do |cat| %>
    <div class="buying-list">
        <span class="buying-list-header"><%= cat.name %></span>
        <ul>
          <% cat.sub_categories.each do |sub_cat| %>
          <li><a href="<%= search_index_path( sub_category_id: sub_cat.id ) %>"><%= sub_cat.name %></a></li>
          <% end %>
        </ul>
    </div>
  <% end %>
</div>
<% end %>

